{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PanosUI: Build Debug",
			"type": "meson",
			"mode": "build",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"revealProblems": "never"
			},
			"problemMatcher": [
				"$meson-gcc"
			],
		},
		{
			"label": "PanosUI: Build Release",
			"type": "shell",
			"group": "build",
			"command": "./build-release.sh",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"revealProblems": "never"
			},
			"problemMatcher": []
		},
		{
			"label": "PanosUI: Build swift-example",
			"type": "shell",
			"group": "build",
			"command": "swift",
			"args": [
				"build",
				"--package-path",
				"${workspaceFolder}/swift",
				"-Xlinker",
				"-L${workspaceFolder:PanosUI}/builddir"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"dependsOn": [
				"PanosUI: Build Debug"
			],
			"problemMatcher": []
		},
		{
			"label": "PanosUI: Generate code coverage",
			"type": "shell",
			"group": "none",
			"command": "ninja",
			"args": [
				"-C",
				"builddir",
				"coverage"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "new",
				"showReuseMessage": false,
				"clear": false
			},
			"dependsOn": [
				"PanosUI: Build Debug",
				"Meson: Run Unit Tests"
			],
			"problemMatcher": []
		}
	]
}